{
  "compilerOptions": {
    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": true,

    /* modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Language and Environment */
    "lib": ["ESNext"],
    "target": "es5",

    /* Emit */
    "outDir": "./dist",
    "declaration": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  }
}
